<%- include('../_partial/_header') -%>

<div class="container-fluid">
    <div class="tm-body">
        <div class="tm-sidebar sticky">
            <section id="welcome" class="tm-content-box tm-banner margin-b-20">
                <div class="tm-banner-inner">
                    <i class="fa fa-film fa-4x margin-b-1"></i>
                    <h1 class="tm-banner-title">Category</h1>              
                </div>                    
            </section>
            <nav class="tm-main-nav">
                <ul class="tm-main-nav-ul">
                    <li class="tm-nav-item"><a href="/result/Breakfast" class="tm-nav-item-link tm-button">Breakfast</a>
                    </li>
                    <li class="tm-nav-item"><a href="/result/Lunch" class="tm-nav-item-link tm-button">Lunch</a>
                    </li>
                    <li class="tm-nav-item"><a href="/result/Dinner" class="tm-nav-item-link tm-button">Dinner</a>
                    </li>
                    <li class="tm-nav-item"><a href="/result/Dessert" class="tm-nav-item-link tm-button">Dessert</a>
                    </li>
                    <li class="tm-nav-item"><a href="/result/Drinks" class="tm-nav-item-link tm-button">Drinks</a>
                    </li>
                    <li class="tm-nav-item"><a href="/result/Healthy" class="tm-nav-item-link tm-button">Healthy</a>
                    </li>
                    <li class="tm-nav-item"><a href="/result/Quick_Easy" class="tm-nav-item-link tm-button">Quick & Easy</a>
                    </li>
                </ul>
            </nav>
        </div>
        
        <div class="tm-main-content tm-gallery-container">   
            <div class="col-md-offset-2 col-md-8 col-sm-12 text-center">
				<h2 style= "color:#008080; font-style:italic"><%= category %></h2> 
				<hr>
            </div>

                <!-- List all the recipes -->
            <% recipes.forEach(function(recipe) { %>
                <div class="col-sm-4 col-md-6">
                    <div class=" crop thumbnail">
                        <% if(recipe.image != null) {%>
                            <% image_url = (typeof recipe.image[0] === 'string') ? recipe.image[0] : recipe.image[0].path %>

                            <% if(currentUser != null){ %>           
                                <a href="/recipes/detail/<%= recipe._id %>"><img src="<%= '/' + image_url %>" alt="Image" ></a>
                                <%}%>
                            <% if(currentUser == null){ %>
                                    <a href="/home/<%= recipe._id %>"><img src="<%= '/' + image_url %>" alt="Image"></a>
                                <%}%>  

                        <% }else{ %>

                            <% if(currentUser != null){ %>           
                                <a href="/recipes/detail/<%= recipe._id %>"><img src="data:image/svg+xml;base64,"
                                    alt="logo"
                                    style="height:200px;width:100%;display:block"></a>
                                <%}%>
                            <% if(currentUser == null){ %>
                                <a href="/home/<%= recipe._id %>"><img src="data:image/svg+xml;base64,"
                                    alt="logo"
                                    style="height:200px;width:100%;display:block"></a>
                                <%}%>  
                        <% } %>


                            <% if(currentUser != null){ %>           
                                    <a href="/recipes/detail/<%= recipe._id %>"><h3 style="text-align:center; color: black"><%= recipe.title %></h3></a>
                                <%}%>
                            <% if(currentUser == null){ %>
                                    <a href="/home/<%= recipe._id %>"><h3 style="text-align:center; color: black"><%= recipe.title %></h3></a>
                                <%}%>  
                   

                    </div>
                </div>
                <% }) %>
                   
        </div><!-- tm-main-content -->
    </div>
</div> 

<%- include('../_partial/_footer') -%>
