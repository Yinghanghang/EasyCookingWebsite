<%- include("../_partial/_header") -%>

<div class= "row">
	<div class="col-md-6" style="margin-bottom:10px ; margin-left:30px; margin-top:50px">
		<a href="/recipes/add" tpye="button" class="btn btn-default" style="background-color: #1b4d3e; color:#fff;">New Recipe</a>
	</div>
</div>
<br />
<!-- show food recipe -->
<!-- List all the recipes. variable recipes is the first variable in {recipes: recipes} in recipe.js -->
<% recipes.forEach(function(recipe) { %>
    <div class="col-sm-4 col-md-4">
        <div class=" croprecipe thumbnail">
            <% if(recipe.image != null) {%>
                <% image_url = (typeof recipe.image[0] === 'string') ? recipe.image[0] : recipe.image[0].path %>
                <a href="recipes/detail/<%= recipe._id %>"> <img src="<%= '/' + image_url %>" height="250px" ></a>
            <% }else{ %>
            <img src="data:image/svg+xml;base64,"
                    alt="logo"
                    style="height:200px;width:100%;display:block">
            <% } %>
            <div class="caption">
                <h3 style="text-align:center;"><%= recipe.title %></h3>
                <p> 
                    <a href="recipes/delete/<%=recipe._id%>" onclick="return confirm('Are you sure you want to delete this recipe?');" class="btn btn-primary" style = "background-color:steelblue;" role="button">Delete</a>
                    <a href="recipes/update/<%=recipe._id%>" style= "float: right" class="btn btn-primary" role="button">Edit</a>                     
                </p>
            </div>
        </div>
    </div>
    <% }) %>
    

<%- include("../_partial/_footer") -%>