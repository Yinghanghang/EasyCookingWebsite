<%- include("../_partial/_header") -%>
        <div class="caption">
            <div class="col-md-3" style="margin-bottom:10px">
                <a href="/recipes/add" tpye="button" class="btn btn-primary">New Recipe</a>
            </div>
            <div class="tm-main-content tm-gallery-container">
                <!-- show food recipe -->
                <!-- List all the recipes -->
                <% recipes.forEach(function(recipe) { %>
                <div class="col-sm-4 col-md-4">
                    <div class="thumbnail">
                        <% if(recipe.image != null) {%>
                        <img src="<%= '/' + recipe.image %>" height="250px" />
                        <% }else{ %>
                        <img src="data:image/svg+xml;base64,"
                             alt="logo"
                             style="height:200px;width:100%;display:block">
                        <% } %>
                        <div class="caption">
                            <h3><%= recipe.title %></h3>
                            <p><%= recipe.prepareTime %></p>
                            <p><%= recipe.cookingTime %></p>
                            <p><%= recipe.cookingSteps %></p>
                            <p>
                                <a href="recipes/<%= recipe._id %>" class="btn btn-primary" role="button">Read</a> <a href="recipes/update/<%=recipe._id%>" class="btn btn-default"
                                                                                                                      role="button">Edit</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>





<% }) %>


<%- include("../_partial/_footer") -%>